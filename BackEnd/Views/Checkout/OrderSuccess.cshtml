@{
    ViewData["Title"] = "Đặt hàng thành công";
    var order = ViewBag.Order;
}

<div class="order-success-page">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card text-center">
                    <div class="card-body py-5">
                        <div class="mb-4">
                            <i class="fa-solid fa-circle-check text-success" style="font-size: 80px;"></i>
                        </div>
                        <h2 class="text-success mb-3">Đặt hàng thành công!</h2>
                        <p class="text-muted mb-4">
                            Cảm ơn bạn đã đặt hàng. Đơn hàng của bạn đã được tiếp nhận và đang chờ xử lý.
                        </p>
                        
                        <div class="order-info bg-light p-4 rounded mb-4">
                            <div class="row">
                                <div class="col-6">
                                    <p class="mb-1 text-muted">Mã đơn hàng:</p>
                                    <h5 class="text-primary">#@order.Id</h5>
                                </div>
                                <div class="col-6">
                                    <p class="mb-1 text-muted">Tổng tiền:</p>
                                    <h5 class="text-danger">@String.Format("{0:N0}", order.TotalAmount)đ</h5>
                                </div>
                            </div>
                            <hr>
                            <p class="mb-0">
                                <i class="fa-solid fa-clock me-2"></i>
                                Ngày đặt: @order.OrderDate.ToString("dd/MM/yyyy HH:mm")
                            </p>
                        </div>

                        <div class="alert alert-info text-start">
                            <h6><i class="fa-solid fa-info-circle me-2"></i>Thông tin vận chuyển:</h6>
                            <ul class="mb-0 ps-4">
                                <li>Đơn hàng sẽ được xử lý trong vòng 24h</li>
                                <li>Thời gian giao hàng: 2-5 ngày làm việc</li>
                                <li>Thanh toán khi nhận hàng (COD)</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2">
                            <a href="/" class="btn btn-primary btn-lg">
                                <i class="fa-solid fa-home me-2"></i>Về trang chủ
                            </a>
                            <a href="/products" class="btn btn-outline-primary">
                                <i class="fa-solid fa-book me-2"></i>Tiếp tục mua sắm
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
