<div class="container-fluid container-xl d-flex align-items-center justify-content-center " style="height: 100vh;">
    <form asp-action="Login" asp-controller="users"  method="post" class="border form-login " style="padding: 25px; border-radius: 10px;min-width:410px">

        <img src="/img/logo.png" class="img-fluid img-thumbnail" style="border: none; background: transparent;" />
        <div class="mt-3">
            <labeL>Tài khoản</labeL>
            <input type="text" name="username" class="form-control" />
        </div>
        <div class="mt-3">
            <labeL>Mật khẩu</labeL>
            <input type="password" name="password" class="form-control" />
        </div>
        <div class="mt-3" >
            @{
                var message = ViewBag.message;
            }
            @if (message != null)
                {
                <span id="msg" class="text-danger">@message</span>
                }
            
        </div>
        <div class="d-flex align-items-center justify-content-between mt-3">
            <a>Chưa có tài khoản? </a>
            <a asp-action="register" asp-controller="users">Đăng ký ngay </a>
        </div>
        <button type="submit" class="btn btn-primary w-100 mt-2" style="background-color: var(--btn);border:none;box-shadow: none;">Đăng nhập</button>
    </form>

</div>
@section Scripts {
<script>
    $(document).ready(function(){
        $('.form-control').on( 'input change',function(){
           
               $("#msg").text('');
            
        });
    });
</script>
}