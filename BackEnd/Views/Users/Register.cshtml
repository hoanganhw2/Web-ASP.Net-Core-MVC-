
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BackEnd.Models.RegisterViewModel;
<div class="container-fluid container-xl d-flex align-items-center justify-content-center my-5">
    <form asp-action="Register" asp-asp-controller="Home"  method="post" class="border form-login " style="padding: 25px; border-radius: 10px;min-width: 410px;">

        <img src="~/img/logo.png" class="img-fluid img-thumbnail" style="border: none; background: transparent;" />
        <h2 class="mt-3 text-center " style="color: #539409;">Đăng ký tài khoản</h2>      
            
        <div class="mt-3">
            <labeL asp-for="username">Tài khoản<span class="text-danger mx-1 my-2">*</span></labeL>
            <input type="text" asp-for="username" class="form-control" />
            <span asp-validation-for="username" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="password" >Mật khẩu<span class="text-danger mx-1 my-2">*</span></label>
            <input asp-for="password" type="password" class="form-control" />
            <span asp-validation-for="password" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="fullname">Họ tên<span class="text-danger mx-1 my-2">*</span></label>
            <input asp-for="fullname" type="text" class="form-control" />
            <span asp-validation-for="fullname" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="phonenumber">Số điện thoại<span class="text-danger mx-1 my-2">*</span></label>
            <input asp-for="phonenumber" type="text" class="form-control" />
            <span asp-validation-for="phonenumber" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="email">Email<span class="text-danger mx-1 my-2">*</span></label>
            <input asp-for="email" type="text" class="form-control" />
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="address">Địa chỉ<span class="text-danger mx-1 my-2">*</span></label>
            <input asp-for="address" type="text" class="form-control" />
            <span asp-validation-for="address" class="text-danger"></span>
        </div>
        <div class="d-flex align-items-center justify-content-between mt-3">
            <a>Đã có tài khoản? </a>
            <a href="/login">Đăng nhập ngay</a>
        </div>
            <button type="submit" class="btn btn-primary w-100 mt-2" style="background-color: var(--btn);border:none;box-shadow: none;">Đăng ký</button>
    </form>
</div>

