@using BackEnd.Models.Entity
@model List<DiscountCode>
@{
    ViewData["Title"] = "Mã giảm giá";
}

<div class="discount-page">
    <div class="breadcrumb-shop">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <ol class="breadcrumb breadcrumb-arrows">
                        <li><a href="/">Trang chủ</a></li>
                        <li class="active">Mã giảm giá</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-4">
        <h2 class="mb-4"><i class="fa-solid fa-tag text-primary me-2"></i>Mã giảm giá khuyến mãi</h2>
        
        @if (Model == null || Model.Count == 0)
        {
            <div class="text-center py-5">
                <i class="fa-solid fa-tags" style="font-size: 80px; color: #ccc;"></i>
                <h4 class="mt-4 text-muted">Hiện không có mã giảm giá nào</h4>
                <p class="text-muted">Hãy quay lại sau để nhận ưu đãi!</p>
                <a href="/" class="btn btn-primary mt-3">
                    <i class="fa-solid fa-home me-2"></i>Về trang chủ
                </a>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var discount in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4 mb-4">
                        <div class="card discount-card h-100">
                            <div class="card-header discount-header @(discount.DiscountType == 0 ? "bg-danger" : "bg-success") text-white">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="discount-value">
                                        @if (discount.DiscountType == 0)
                                        {
                                            <span class="fs-3 fw-bold">@discount.DiscountValue%</span>
                                            <small>GIẢM</small>
                                        }
                                        else
                                        {
                                            <span class="fs-4 fw-bold">@String.Format("{0:N0}", discount.DiscountValue)đ</span>
                                        }
                                    </span>
                                    <i class="fa-solid fa-ticket fa-2x opacity-50"></i>
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@discount.Description</h5>
                                <div class="discount-code-box my-3">
                                    <div class="input-group">
                                        <input type="text" class="form-control code-input" value="@discount.Code" readonly>
                                        <button class="btn btn-outline-primary btn-copy" type="button" data-code="@discount.Code">
                                            <i class="fa-solid fa-copy"></i>
                                        </button>
                                    </div>
                                </div>
                                <ul class="list-unstyled small text-muted">
                                    <li><i class="fa-solid fa-cart-shopping me-2"></i>Đơn tối thiểu: <strong>@String.Format("{0:N0}", discount.MinOrderAmount)đ</strong></li>
                                    @if (discount.DiscountType == 0)
                                    {
                                        <li><i class="fa-solid fa-arrow-down me-2"></i>Giảm tối đa: <strong>@String.Format("{0:N0}", discount.MaxDiscountAmount)đ</strong></li>
                                    }
                                    <li><i class="fa-solid fa-users me-2"></i>Còn lại: <strong>@(discount.UsageLimit - discount.UsedCount)</strong> lượt</li>
                                </ul>
                            </div>
                            <div class="card-footer bg-light">
                                <div class="d-flex justify-content-between align-items-center small">
                                    <span class="text-muted">
                                        <i class="fa-solid fa-clock me-1"></i>
                                        HSD: @discount.EndDate.ToString("dd/MM/yyyy")
                                    </span>
                                    <span class="badge @(discount.EndDate > DateTime.Now.AddDays(7) ? "bg-success" : "bg-warning")">
                                        @if (discount.EndDate > DateTime.Now.AddDays(7))
                                        {
                                            <text>Còn hiệu lực</text>
                                        }
                                        else
                                        {
                                            <text>Sắp hết hạn</text>
                                        }
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .discount-card {
        border: none;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        overflow: hidden;
    }
    .discount-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    .discount-header {
        padding: 20px;
    }
    .discount-code-box .code-input {
        font-family: monospace;
        font-size: 16px;
        font-weight: bold;
        letter-spacing: 2px;
        text-align: center;
        background: #f8f9fa;
        border: 2px dashed #dee2e6;
    }
    .btn-copy {
        border: 2px dashed #dee2e6;
        border-left: none;
    }
    .btn-copy:hover {
        background-color: #0d6efd;
        color: white;
    }
</style>

@section Scripts {
<script>
    $(document).ready(function() {
        // Sao chép mã giảm giá
        $('.btn-copy').on('click', function() {
            var code = $(this).data('code');
            navigator.clipboard.writeText(code).then(function() {
                toastr.success('Đã sao chép mã: ' + code);
            }).catch(function() {
                toastr.error('Không thể sao chép mã!');
            });
        });
    });
</script>
}
